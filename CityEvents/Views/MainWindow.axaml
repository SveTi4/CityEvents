<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CityEvents.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ext="clr-namespace:CityEvents.Converters"
        xmlns:cityEvents="clr-namespace:CityEvents"
        xmlns:views="clr-namespace:CityEvents.Views"
        mc:Ignorable="d" d:DesignWidth="550" d:DesignHeight="450" Width="550" Height="450"
        x:Class="CityEvents.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="CityEvents">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    <Window.Resources>
        <ext:BitmapAssetValueConverter x:Key="variableImage"/>
    </Window.Resources>
    <Window.Styles>
        <Style Selector="TextBlock.Title">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0 5 0 5"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        <Style Selector="TextBlock.Text">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="TextAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0 4 0 4"/>
            <Setter Property="Padding" Value="6 0 6 0"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        <Style Selector="TextBlock.Date">
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="FontWeight" Value="500"/>
        </Style>
        <Style Selector="TextBlock.Description">
            
        </Style>
        <Style Selector="TextBlock.Price">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="FontWeight" Value="500"/>
        </Style>
    </Window.Styles>
    <StackPanel>
        <TabControl SelectedIndex="{Binding TabIndex}">
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="Для детей"/>
                </TabItem.Header>
                <views:TabContentControl Events="{Binding CItems1}"/>
            </TabItem>
    
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="Спорт"/>
                </TabItem.Header>
                <views:TabContentControl Events="{Binding CItems2}"/>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="Культура"/>
                </TabItem.Header>
                <views:TabContentControl Events="{Binding CItems3}"/>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="Экскурсии"/>
                </TabItem.Header>
                <views:TabContentControl Events="{Binding CItems4}"/>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="Образ жизни"/>
                </TabItem.Header>
                <views:TabContentControl Events="{Binding CItems5}"/>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="Вечеринки"/>
                </TabItem.Header>
                <views:TabContentControl Events="{Binding CItems6}"/>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="Образование"/>
                </TabItem.Header>
                <views:TabContentControl Events="{Binding CItems7}"/>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="Онлайн"/>
                </TabItem.Header>
                <views:TabContentControl Events="{Binding CItems8}"/>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="Шоу"/>
                </TabItem.Header>
                <views:TabContentControl Events="{Binding CItems9}"/>
            </TabItem>
        </TabControl>
    </StackPanel>

</Window>
